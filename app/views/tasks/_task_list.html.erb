<% if tasks.empty? %>
  <span class="text-warning">There are no tasks!</span>
<% else %>
  <table class="table table-hover table-bordered">
    <thead>
      <tr>
        <th colspan="2">  <%= simple_form_for Task.new,
            html: { class: "form-inline" }, remote: true do |f| %>
            <%= f.input_field :title, :placeholder => "New Task" %>
            <%= f.submit 'Save', class: 'btn btn-primary' %>
          <% end %>
        </th>
      </tr>
    </thead>
    <tbody>
      <% tasks.each do |task| %>
        <tr>
          <td>
            <strong>
              <%= task.title %>
            </strong>
          </td>
          <td>
            <%= link_to task_path(task), remote: true, method: :delete, data: {confirm: "Are you sure you want to delete task #{task.title}?"} do %>
              <i class="icon-remove"></i>
            <% end %>
            <%= link_to edit_task_path(task), remote: true do %>
              <i class="icon-edit"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
